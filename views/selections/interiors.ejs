<% layout('./layouts/selection-list') -%>

<h1>
	Interior Index!
</h1>

<% interiors.forEach(function(interior) { %>
	<div>
		<ul>
			<%= interior.title %>
			<div>
				<button class="toggle-edit-form">Edit</button>

				<div class="edit-list-form">
					<form action="/interiors/<%= interior.id %>?_method=PUT" method="POST">
						Interior Type: <input type="text" name="title" value="<%= interior.title %>" />
						3/4" Panel: <input type="number" name="tpanel" min="0.0000" step="0.0001" value="<%= interior.tpanel %>"/>
						1/4" Panel: <input type="number" name="qpanel" min="0.0000" step="0.0001" value="<%= interior.qpanel %>"/>
						<input type="submit" value="Update">
					</form>
					<form action="/interiors/<%= interior.id %>?_method=DELETE" method="POST">
						<input type="submit" value="Delete">
					</form>
				</div>
				
			</div>
		</ul>
	</div>
<% }); %>

<h3>
	New Interior/Material
</h3>

<form action="/interiors" method="POST">
	<div>
		Interior Type: <input type="text" name="title" placeholder="Interior"><br>
		3/4" Panel: <input type="number" name="tpanel" min="0.0000" step="0.0001" required/><br>
		1/4" Panel: <input type="number" name="qpanel" min="0.0000" step="0.0001" required/><br>
	</div>
	<input type="submit">
</form>

