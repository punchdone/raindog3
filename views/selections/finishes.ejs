<% layout('./layouts/selection-list') -%>

<h1>
	<%= title %>
</h1>

<% finishes.forEach(function(finish) { %>
	<div>
		<ul>
			Name: <%= finish.title %><br>
			Type: <%= String(finish.type).split(/'/)[1] %>
			<div>
				<button class="toggle-edit-form">Edit</button>

				<div class="edit-list-form">
					<form action="/finishes/<%= finish.id %>?_method=PUT" method="POST">
						Finish Name: <input type="text" name="finish name" value="<%= finish.title %>" /><br>
						<div>
						Finish Type:
						<select name="type" id="type">
							<% finishtypes.forEach(function(finishtype) { %>
								<option value="<%= finishtype._id %>"><%= finishtype.title %></option>
							<% }) %>
						</select>
						</div>
						<input type="submit" value="Update">
					</form>
					<form action="/finishes/<%= finish.id %>?_method=DELETE" method="POST">
						<input type="submit" value="Delete">
					</form>
				</div>
			</div>
		</ul>
	</div>
<% }); %>

<h3>
	New Finish
</h3>

<form action="/finishes" method="POST">
	
	<div>Finish Name: <input type="text" name="title" placeholder="Finish"><br>
	Finish Type:
	<select name="finishtype" id="finishtype">
		<% finishtypes.forEach(function(finishtype) { %>
			<option value="<%= finishtype._id %>"><%= finishtype.title %></option>
		<% }) %>
	</select></div>
	
	<input type="submit">
</form>

<script src="/javascripts/project-show.js"></script>