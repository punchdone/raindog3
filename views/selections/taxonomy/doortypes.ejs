<% layout('./layouts/selection-list') -%>

<h1>
	<%= title %>
</h1>

<% doortypes.forEach(function(doortype) { %>
	<div>
		<ul>
			<%= doortype.title %><br>
			<%= doortype.rate %>
			<div>
				<button class="toggle-edit-form">Edit</button>

				<div class="edit-list-form">
					<form action="/doortypes/<%= doortype.id %>?_method=PUT" method="POST">
						Door Type: <textarea name="title" required><%= doortype.title %></textarea>
						Rate: <input type="number" name="rate" min="0.00" step="0.01" value="<%= doortype.rate %>"/>
						<input type="submit" value="Update">
					</form>
					<form action="/doortypes/<%= doortype.id %>?_method=DELETE" method="POST">
						<input type="submit" value="Delete">
					</form>
				</div>
			</div>
		</ul>
	</div>
<% }); %>

<h3>
	New Door Type
</h3>

<form action="/doortypes" method="POST">
	
	<div>Door Type: <input type="text" name="title" placeholder="Door Type"><br>
	Rate: <input type="number" name="rate" min="0.00" step="0.01" />
	</div>
	

	<input type="submit">
</form>

<script src="/javascripts/project-show.js"></script>