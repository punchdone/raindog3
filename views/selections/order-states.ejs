<% layout('./layouts/selection-list') -%>

<h1>
	Order States Index!
</h1>

<% orderStates.forEach(function(orderState) { %>
	<div>
		<ul>
			<%= orderState.title %>
			<div>
				<button class="toggle-edit-form">Edit</button>

				<div class="edit-list-form">
					<form action="/order-states/<%= orderState.id %>?_method=PUT" method="POST">
						<textarea name="title" required><%= orderState.title %></textarea>
						<input type="submit" value="Update">
					</form>
					<form action="/order-states/<%= orderState.id %>?_method=DELETE" method="POST">
						<input type="submit" value="Delete">
					</form>
				</div>
			</div>
		</ul>
	</div>
<% }); %>

<h3>
	New Order State
</h3>

<form action="/order-states" method="POST">
	
	<div><input type="text" name="title" placeholder="Order State"></div>
	
	
	<input type="submit">
</form>

<script src="/javascripts/project-show.js"></script>