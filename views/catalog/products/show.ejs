<% layout('layouts/boilerplate') -%>

<div class="container">
	
	<!-- Header -->
	<h1><%= product.title %></h1>
	<h3><%= product.cabtype.code %><%= product.configuration %></h3>

	<!-- Images -->
	<div>
		Images: <br>
		<% product.images.forEach(function(image) { %>
		<img src="<%= image.url %>" alt="Product Image" width="200px">
		<% }); %>
	</div><br>
	
	<!-- Docs -->
	<div>
		Documents: <br>
		<% product.docs.forEach(function(doc) { %>
			<img src=""<%= doc.url %> alt="Product Doc" width="200"px> 
		<% }) %>
	</div>
	
	<!-- Configuration Details -->
Hinging Required: <input type="checkbox" id="Hinging" name="Hinging" <%= product.hinging ? "checked" : "" %> />
	<hr>
	<div>
		<h2>
			Dimensions
		</h2><br>
		<table>
			<tr>
				<th></th>
				<th>Width</th>
				<th>Height</th>
				<th>Depth</th>
			</tr>
			<tr>
				<td>Standard</td>
				<td><%= product.widthstd %></td>
				<td><%= product.heightstd %></td>
				<td><%= product.depthstd %></td>
			</tr>
			<tr>
				<td>Fix Dimension</td>
				<td><input type="checkbox" name="Width Fixed" id="widthfix" <%= product.widthfix ? "checked" : "" %>></td>
				<td><input type="checkbox" name="Height Fixed" id="heightfix"<%= product.heightfix ? "checked" : "" %>></td>
				<td><input type="checkbox" name="Depth Fixed" id="depthfix "<%= product.depthfix ? "checked" : "" %>></td>
			</tr>
			<tr>
				<td>Minimum</td>
				<td><%= product.widthmin %></td>
				<td><%= product.heightmin %></td>
				<td><%= product.depthmin %></td>
			</tr>
			<tr>
				<td>Maximum</td>
				<td><%= product.widthmax %></td>
				<td><%= product.heightmax %></td>
				<td><%= product.depthmax %></td>
			</tr>
		</table>
	</div>
	<hr>
		Top Drawer (Qty): <%= product.topdrawer %><br>
		Lower Drawer (Qty): <%= product.lowerdrawer %><br>
		Door (Qty): <%= product.door %><br>
		Shelves (Qty): <%= product.shelves %><br>
		Partitions (Qty): <%= product.partitions %><br>
		Finished Interior: <input type="checkbox" name="Finished Interior" id="finint" <%= product.finint ? "checked" : "" %>><br>
		Face Frame: <input type="checkbox" name="Face Frame" id="faceframe" <%= product.faceframe ? "checked" : "" %>><br>
		Faces (Qty): <%= product.faces %><br>
		Angles (Qty): <%= product.angles %><br>
		Price: <%= product.price %><br>
		Notes:<br>
		<%= product.notes %>
	<hr>
		Available modifications and accessories:<br>
			<ul>
				<% product.mods.forEach(function(mod) { %>
					<li><%= mod.cabtype.code %><%= mod.configuration %> - <%= mod.title %>
					</li>
				<% }) %>
			</ul>

<form action="/catalog/products/<%= product._id %>/edit" method="GET">
	
	<input type="Submit" class="btn btn-primary" value="Edit">
						
</form>
<form action ="/catalog/products/<%= product._id %>?_method=DELETE" method="POST">
	<input type="Submit" class="btn btn-primary mt-2" value="Delete">
</form>


</div>


