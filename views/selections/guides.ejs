<% layout('./layouts/selection-list') -%>

<h1>
	<%= title %>
</h1>

<% guides.forEach(function(guide) { %>
	<div>
		<ul>
			<%= guide.title %>
			<div>
				<button class="toggle-edit-form">Edit</button>

				<div class="edit-list-form">
					<form action="/guides/<%= guide.id %>?_method=PUT" method="POST">
						Type: <input type="text" name="title" value="<%= guide.title %>" />
						Cost: <input type="number" name="rate" min="0.0000" step="0.0001" value="<%= guide.rate %>"/>
						<input type="submit" value="Update">
					</form>
					<form action="/guides/<%= guide.id %>?_method=DELETE" method="POST">
						<input type="submit" value="Delete">
					</form>
				</div>
			</div>
		</ul>
	</div>
<% }); %>

<h3>
	New Guide
</h3>

<form action="/guides" method="POST">
	
	<div>
		Type: <input type="text" name="title" placeholder="Guide"><br>
		Cost: <input type="number" name="rate" min="0.0000" step="0.0001" required/><br>
	</div>
	
	<input type="submit">
</form>

<script src="/javascripts/project-show.js"></script>